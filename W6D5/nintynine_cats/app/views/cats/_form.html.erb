<h1>Cat Partial</h1>

<% if action == :new %>
    <% action_url = cats_url %>
    <% button_text = 'Create Cat' %>
<% else %>
    <% action_url = cat_url(cat)%>
    <% button_text = 'Update Cat' %>
<% end %>    

<form action="<%= action_url %>" method = 'post'>
<% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
<% end %>

    <label for="name">Name</label>
    <input type="text" name='cat[name]' value='<%= @cat.name %>'>

    <br>

    <label for="birth_date">Birth_date</label>
    <input type="date" name='cat[birth_date]' value='<%= @cat.birth_date %>'>

    <br>
    
    <label for="sex">Sex</label>
    <label for="M">M</label>
    <input type="radio" name='cat[sex]' value='M' checked>
    <label for="F">F</label>
    <input type="radio" name='cat[sex]' value='F'>

    <br>

    <label for="color">Color</label>
    <select type="color" name="cat[color]">
        <option disabled selected> -- select a color --</option>
        <% Cat::COLOR.each do |each_color| %>
            <option value = "<%= each_color %>"><%=each_color%></option>
        <% end %>
    </select>

    <br><br>

    <label for="description">Description</label>
    <textarea name="cat[description]"></textarea>

    <input type="submit" value="<%= button_text%>">
</form>